                            </a>
                            <div class="actions">
                                 {{#if this.status}}
                                    <span class="cart cart-bag" style="display: none;"><i class="fas fa-shopping-bag"></i><a href="/cart/add/{{this.productId}}"> Add to Cart</a></span>
                                    {{else}}
                                    <span class="cart cart-bag"><i class="fas fa-shopping-bag"></i><a href="/cart/add/{{this.productId}}"> Add to Cart</a></span>
                                  {{/if}}

                                <span class="white-list"><i class="far fa-heart"></i><a href ='/wishliist/add/{{this.productId}}'> Add to wishlist</a></span>
                            </div>
                        </div>
               
                {{/each}}
