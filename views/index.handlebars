<section id="plus-demande">
    <div class="container">
        <div class="text">
            <h2>LE PLUS DEMANDE</h2>
            <div class="line">
                <div class="inner-line bg-red"></div>
            </div>
        </div>

            <div class="product product-slider">
               
                {{#each products}}

                            <a href="/cart/view/productdetails?product={{this.productId}}">
                                <div class="item">
                                    <img src="{{this.productPhoto}}" alt="">
                                    <p class="product-name">{{this.ProductName}}</p>
                                    <p class="red-text">{{this.price}}DH</p>
                                      {{#if this.status}}
                                        <p class="ready-added red-text" style="font-size:12px;margin-top:5px;">Ready added to cart</p>
                                        {{else}}
