{{> header}}
<section class="checkout-showcase checkout-page">
        <h1>CheckOut <span class="red-text">/ <a href="/cart/checkout" class="red-text">cart</a></span></h1>
    <div class="container">
        <form action="/cart/checkout/payment" method="POST" id="payment-form" class="flex">
            <div class="form-row">
                <div class="address-field form-group">
                    <label for="address">email: </label>
                    <input type="email" name="email" id="address" value="{{email}}" disabled required>
                </div>
                <div class="address-field form-group">
                    <label for="address">Address: </label>
                    <input type="text" name="address" id="address" required>
                </div>
                <div class="telephone-field form-group">
                    <label for="tel">Telephone: </label>
                    <input type="text" name="tel" id="tel">
                </div>
                <div class="chose-payment flex">
                    <div class="card flex">
                    <input type="radio" name="card" id="check-card" checked='true' onclick="paymentMethods()" required>
                    <label for="">Pay with Bank card</label>
                    </div>
                    <div class="paypal flex">
                    <input type="radio" name="card" id="check-paypal" onclick="paymentMethods()">
                    <label for="">Continue with Paypal</label>
                    </div>
                </div>

                <div id="card-element">
                <!-- A Stripe Element will be inserted here. -->
                </div>

                <!-- Used to display Element errors. -->
                <div id="card-errors" role="alert" class="red-text"></div>
            </div>


            <div class="order-details">
                <h2 class="summary">Summary</h2>
                <div class="original-price flex">
                    <p>Original Price: </p>
                    <p>         {{total}} </p>
                </div>
                <div class="discount flex">
                    <p>Cupon discount: </p>
                    <p>-0.00</p>
                </div>
                <hr>
                <strong class="flex total">
                    <p>Total:</p>
                    <p>{{total}}</p>
                </strong>
                <div class="actions">
                <button type="submit" class="bg-red card-submit">Submit Payment</button>
                <button type="submit" class="bg-red paypal-submit" style="display: none;">Proceed with Paypal</button>
                            

                </div>
            </div>
        </form>

    </div>

</section>
{{> footer}}
<script src="/js/stripe.js"></script>